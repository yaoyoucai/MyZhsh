<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/iv_item_tabdetaill_icon"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:background="#9e9e9e"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/news_pic_default" />

    <TextView
        android:id="@+id/tv_item_tabdetail_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/iv_item_tabdetaill_icon"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="5dp"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_item_tabdetail_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_item_tabdetaill_icon"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/iv_item_tabdetaill_icon"
        android:text="20150608"
        android:textColor="#9e9e9e"
        android:textSize="16sp" />
</RelativeLayout>